{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "OctoFit Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/octofit-tracker/backend/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8000"
            ],
            "django": true,
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/octofit-tracker/backend"
            },
            "presentation": {
                "hidden": false,
                "group": "OctoFit",
                "order": 1
            },
            "console": "integratedTerminal"
        }
    ]
}
